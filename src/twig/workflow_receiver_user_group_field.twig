<div id="pp-post_following_box">
	<a name="subscriptions"></a>
	<div id="pp-post_following_users_box">
		<h4>{{ label }}</h4>

		{% if user_groups %}
			<ul class="{{ list_class }}">
				{% for group in user_groups %}
					<li>
						<label for="{{ input_id }}{{ group.term_id }}">
							<input
								type="checkbox"
								id="{{ input_id }}{{ group.term_id }}"
								name="{{ input_name }}[]"
								value="{{ group.term_id }}"
								{{ checked( group.selected, true ) }} />

							<span class="pp-usergroup_name">{{ group.name }}</span>
						</label>
					</li>
				{% endfor %}
			</ul>
		{% endif %}

	</div>

	<div class="clear"></div>
</div>
