<div>
	<input
		type="checkbox"
		name="{{ name }}"
		id="{{ id }}"
		value="{{ value }}"
		{{ checked( meta.selected, 1 ) }} />

	<label for="{{ id }}">{{ label }}</label>

	{% if event_filters %}
		<ul class="{{ id }}_filters" {% if not meta.selected %}style="display:none;"{% endif %} >
			{% for event_filter in event_filters %}
				<li>
					{{ event_filter.render() }}
				</li>
			{% endfor %}
		</ul>
	{% endif %}

</div>
